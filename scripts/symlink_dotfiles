#!/usr/bin/env ruby

require "pathname"
require "fileutils"

Pathname.glob("atom/*").each do |file|
  FileUtils.symlink "#{Dir.pwd}/#{file}", "#{Dir.home}/.atom/#{file.basename}", force: true, verbose: true
end

Pathname.glob("home/*").each do |file|
  FileUtils.symlink "#{Dir.pwd}/#{file}", "#{Dir.home}/.#{file.basename}", force: true, verbose: true
end
